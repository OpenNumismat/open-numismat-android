<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#FFA000</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#727272</item>
        <item name="android:divider">#B6B6B6</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:alertDialogTheme">@style/AlertTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorAccent">#FFA000</item>
        <item name="android:textColorPrimary">#212121</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textColorSecondary">#212121</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="AlertTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/background</item>
    </style>

</resources>
